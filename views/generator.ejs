<div class="max-w-4xl mx-auto">
  <h1 class="text-3xl font-bold mb-6">Generador de Imágenes con IA</h1>

  <div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <form id="generateForm" class="space-y-4">
      <div>
        <label for="prompt" class="block text-sm font-medium text-gray-700 mb-1">
          Describe la imagen que deseas generar
        </label>
        <textarea id="prompt" name="prompt" rows="4"
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          placeholder="Ej: Un paisaje futurista con ciudades flotantes y atardecer naranja" required></textarea>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <label for="model" class="block text-sm font-medium text-gray-700 mb-1">Modelo</label>
          <select id="model" name="model" class="w-full px-3 py-2 border border-gray-300 rounded-md">
            <option value="image-sm">image-sm</option>
          </select>
        </div>

        <div>
          <label for="size" class="block text-sm font-medium text-gray-700 mb-1">Tamaño</label>
          <select id="size" name="size" class="w-full px-3 py-2 border border-gray-300 rounded-md">
            <option value="1024x1024">1024x1024</option>
            <option value="1792x1024">1792x1024 (horizontal)</option>
            <option value="1024x1792">1024x1792 (vertical)</option>
          </select>
        </div>

        <div>
          <label for="quality" class="block text-sm font-medium text-gray-700 mb-1">Calidad</label>
          <select id="quality" name="quality" class="w-full px-3 py-2 border border-gray-300 rounded-md">
            <option value="standard">Estándar</option>
            <option value="hd">Alta definición</option>
          </select>
        </div>
      </div>

      <button type="submit"
        class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-md transition duration-200">
        Generar Imagen
      </button>
    </form>
  </div>

  <div id="resultContainer" class="hidden bg-white rounded-lg shadow-md p-6 mb-6">
    <h2 class="text-xl font-semibold mb-4">Resultado</h2>
    <div class="flex flex-col items-center">
      <img id="generatedImage" src="" alt="Imagen generada" class="max-w-full h-auto rounded-lg mb-4">
      <div class="flex space-x-3">
        <a id="downloadBtn" href="#" download class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md">
          Descargar
        </a>
        <button id="saveBtn" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md">
          Guardar en galería
        </button>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-md p-6">
    <h2 class="text-xl font-semibold mb-4">Tus imágenes recientes</h2>
    <div id="gallery" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <!-- Las imágenes se cargarán aquí mediante JavaScript -->
    </div>
  </div>

</div>

<!-- Loader container-->
<div id="loaderContainer" class="fixed inset-0 bg-white bg-opacity-80 z-50 flex items-center justify-center hidden">
  <div class="w-full max-w-md px-4">
    <div class="text-center mb-4">
      <p class="text-lg font-medium text-blue-600">Generando tu imagen...</p>
      <p class="text-sm text-gray-500 mt-1">Por favor espera, esto puede tomar unos momentos</p>

      <button id="cancelGeneration" class="mt-4 px-4 py-2 bg-red-500 text-white rounded-md hover:bg-red-600">
        Cancelar generación
      </button>

    </div>
  </div>
</div>