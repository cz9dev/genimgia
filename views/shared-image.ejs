<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Imagen Compartida</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <div class="max-w-4xl mx-auto p-6">
        <div class="bg-white rounded-lg shadow-md p-6">
            <h1 class="text-2xl font-bold mb-4">Imagen Compartida</h1>
            
            <div class="mb-4">
                <p class="text-gray-700"><%= prompt %></p>
                <p class="text-sm text-gray-500">Creada el: <%= new Date(createdAt).toLocaleString() %></p>
            </div>
            
            <div class="flex justify-center">
                <img src="<%= imageUrl %>" alt="<%= prompt %>" class="max-w-full h-auto rounded-lg shadow">
            </div>
            
            <div class="mt-6 flex justify-between items-center">
                <a href="<%= imageUrl %>" download 
                   class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">
                    Descargar Imagen
                </a>
                
                <div class="flex space-x-2">
                    <button onclick="shareOnTwitter()" 
                            class="px-4 py-2 bg-blue-400 text-white rounded hover:bg-blue-500 transition">
                        Twitter
                    </button>
                    <button onclick="shareOnFacebook()" 
                            class="px-4 py-2 bg-blue-800 text-white rounded hover:bg-blue-900 transition">
                        Facebook
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function shareOnTwitter() {
            const text = "Mira esta imagen generada con IA: <%= prompt %>";
            const url = window.location.href;
            window.open(`https://twitter.com/intent/tweet?text=${encodeURIComponent(text)}&url=${encodeURIComponent(url)}`, '_blank');
        }

        function shareOnFacebook() {
            const url = window.location.href;
            window.open(`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(url)}`, '_blank');
        }
    </script>
</body>
</html>